{
    "env": {
      "browser": true,
      "es6": true,
      "webextensions": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "rules": {
      "indent": ["error", 2],
      "linebreak-style": "off",
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "no-console": "warn",
      "prefer-arrow-callback": "error",
      "arrow-parens": ["error", "as-needed"]
    }
}